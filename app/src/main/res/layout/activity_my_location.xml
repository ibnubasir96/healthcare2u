<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@drawable/background2">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="298dp"
        android:layout_height="292dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/logo"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="-39dp" />

    <TextView
        android:id="@+id/geocode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="-73dp"
        android:text="Your Current GeoCode "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvcoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geocode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Your Location"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcoords"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Your Current Address "
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="312dp"
        android:layout_height="90dp"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Your Location"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Your Current TimeDate "
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/timedate2"
        android:layout_width="291dp"
        android:layout_height="66dp"
        android:layout_below="@+id/timedate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Your TimeDate"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:backgroundTint="#5C5CFF"
        app:titleTextColor="#FBD3D3"
        tools:ignore="BottomAppBar" />

    <Button

        android:id="@+id/map_button"

        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#00BCD4"
        android:textSize="10dp"
        android:text="map"
        android:textColor="#0C0C0C" />

    <Button
        android:id="@+id/location_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="282dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#00BCD4"
        android:text="My Location"
        android:textSize="10dp"
        android:textColor="#0C0C0C" />



</RelativeLayout>